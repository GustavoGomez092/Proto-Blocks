{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "proto-blocks/hero",
    "title": "Hero Section",
    "description": "A full-width hero section with background image, customizable colors, and nested content blocks.",
    "category": "proto-blocks",
    "icon": "cover-image",
    "keywords": ["hero", "banner", "header", "cover", "landing"],
    "supports": {
        "html": false,
        "anchor": true,
        "customClassName": true,
        "align": ["wide", "full"]
    },
    "protoBlocks": {
        "version": "1.0",
        "isExample": true,
        "useTailwind": false,
        "template": "template.php",
        "fields": {
            "title": {
                "type": "text",
                "tagName": "h1",
                "format": "simple"
            },
            "subtitle": {
                "type": "text",
                "tagName": "p",
                "format": "standard"
            },
            "innerContent": {
                "type": "innerblocks",
                "allowedBlocks": ["core/button", "core/buttons", "core/paragraph", "core/heading", "core/list", "core/image"],
                "template": [
                    ["core/buttons", {}, [
                        ["core/button", {"text": "Get Started", "className": "is-style-fill"}],
                        ["core/button", {"text": "Learn More", "className": "is-style-outline"}]
                    ]]
                ],
                "orientation": "vertical"
            }
        },
        "controls": {
            "backgroundImage": {
                "type": "image",
                "label": "Background Image"
            },
            "backgroundColor": {
                "type": "color",
                "label": "Overlay Color",
                "default": "#1e1e1e"
            },
            "overlayOpacity": {
                "type": "range",
                "label": "Overlay Opacity",
                "default": 70,
                "min": 0,
                "max": 100,
                "step": 5
            },
            "textColor": {
                "type": "color-palette",
                "label": "Text Color",
                "default": "#ffffff"
            },
            "contentAlignment": {
                "type": "radio",
                "label": "Content Alignment",
                "default": "center",
                "options": [
                    { "key": "left", "label": "Left" },
                    { "key": "center", "label": "Center" },
                    { "key": "right", "label": "Right" }
                ]
            },
            "minHeight": {
                "type": "number",
                "label": "Minimum Height (vh)",
                "default": 60,
                "min": 20,
                "max": 100,
                "step": 5
            },
            "verticalAlignment": {
                "type": "select",
                "label": "Vertical Alignment",
                "default": "center",
                "options": [
                    { "key": "top", "label": "Top" },
                    { "key": "center", "label": "Center" },
                    { "key": "bottom", "label": "Bottom" }
                ]
            }
        }
    }
}
